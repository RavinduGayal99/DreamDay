@model DreamDay.ViewModels.UserDetailsViewModel

<dl class="row">
    <dt class="col-sm-4">User ID</dt>
    <dd class="col-sm-8">@Model.User.Id</dd>

    <dt class="col-sm-4">Name</dt>
    <dd class="col-sm-8">@Model.User.Name</dd>

    <dt class="col-sm-4">Email</dt>
    <dd class="col-sm-8">@Model.User.Email</dd>

    <dt class="col-sm-4">Date Created</dt>
    <dd class="col-sm-8">@Model.User.CreatedAt.ToString("F")</dd>

    <dt class="col-sm-4">Roles</dt>
    <dd class="col-sm-8">@string.Join(", ", Model.Roles)</dd>
</dl>